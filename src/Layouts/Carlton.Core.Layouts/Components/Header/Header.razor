@namespace Carlton.Core.Layouts.Components
@using System.Diagnostics.CodeAnalysis;

<MediaQueryWrapper>
    <DesktopContent>
        <DesktopHeaderTemplate>
            <MenuContent>
                <HamburgerCollapser />
            </MenuContent>
            <TitleContent>
                @PageTitleContent
            </TitleContent>
            <ActionContent>
                @HeaderActionsContent
            </ActionContent>
        </DesktopHeaderTemplate>
    </DesktopContent>
    <MobileContent>
        <MobileHeaderTemplate>
            <NavContent>
                <MobileSlideOutNav NavMenuContent="NavMenuContent" />
            </NavContent>
            <LogoCotentent>
                <Logo Title="Carlton Test Bed" />
            </LogoCotentent>
            <TitleContent>
                @PageTitleContent
            </TitleContent>
            <ActionContent>
                @HeaderActionsContent
            </ActionContent>
        </MobileHeaderTemplate>
    </MobileContent>
</MediaQueryWrapper>

@code {
    [Parameter]
    public RenderFragment PageTitleContent { get; set; }
    [Parameter, AllowNull]
    public RenderFragment NavMenuContent { get; set; }
    [Parameter]
    public RenderFragment HeaderActionsContent { get; set; }
}
