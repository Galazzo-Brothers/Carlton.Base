@namespace Carlton.Core.Layouts.Components

@if (ShowPanel)
{
    <MediaQueryWrapper>
        <DesktopContent>
            <ResizablePanel>
                <TopContent>
                    @Body
                </TopContent>
                <BottomContent>
                    @PanelContent
                </BottomContent>
            </ResizablePanel>
        </DesktopContent>
        <MobileContent>
            <div class="mobile-main-content">
                @Body
            </div>
            <div class="mobile-fixed-panel-content">
                @PanelContent
            </div>
        </MobileContent>
    </MediaQueryWrapper>
}
else
{
    @Body
}

@code {
    [Parameter]
    public RenderFragment Body { get; set; }
    [Parameter]
    public RenderFragment PanelContent { get; set; }
    [Parameter]
    public bool ShowPanel { get; set; }
}