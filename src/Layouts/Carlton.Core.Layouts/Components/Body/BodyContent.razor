@namespace Carlton.Core.Layouts.Components

@if(ShowTabPanel)
{
    <CarltonTabPanel>
        <MainContent>
            @Body
        </MainContent>
        <Tabs>
            @Tabs
        </Tabs>
    </CarltonTabPanel>
}
else
{
    @Body
}

@code {
    [Parameter]
    public RenderFragment Body { get; set; }
    [Parameter]
    public RenderFragment Tabs { get; set; }
    [Parameter]
    public bool ShowTabPanel { get; set; }
}