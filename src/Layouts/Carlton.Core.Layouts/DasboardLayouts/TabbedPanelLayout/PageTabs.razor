@using Carlton.Core.Components.Tabs
@using Carlton.Core.Layouts.DashboardLayouts.TabbedPanelLayout
@using Carlton.Core.LayoutServices.Viewport
@namespace Carlton.Core.Layouts.DashboardLayouts.TabbedPanelLayout

@* Represents the tabbed panel layout for the dashboard. *@
<SectionContent SectionId="DashboardTabbedPanelLayout.Tabs">
    <MediaQueryWrapper>
        <!-- Desktop Content -->
        <DesktopContent>
            <TextTabBar ContentLocation="ContentLocations.Below">
                <ChildContent>
                    @TabContent
                </ChildContent>
            </TextTabBar>
        </DesktopContent>

        <!-- Mobile Content -->
        <MobileContent>
            <MobileDrawerTabBar>
                <ChildContent>
                    @TabContent
                </ChildContent>
            </MobileDrawerTabBar>
        </MobileContent>
    </MediaQueryWrapper>
</SectionContent>

@code {
    /// <summary>
    /// Gets or sets the content to be rendered within the tabs.
    /// </summary>
    [Parameter]
    public RenderFragment TabContent { get; set; }
}
