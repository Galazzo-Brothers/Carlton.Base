@using Microsoft.Extensions.Logging
@using Microsoft.JSInterop
@using System.Diagnostics.Contracts
@namespace Carlton.Core.Flux.Components
@typeparam TState
@typeparam TViewModel
@inherits FluxWrapper<TState, TViewModel>

@if (IsLoading)
{
    @SpinnerContent
}
else
{
    <DynamicComponent Type="WrappedComponentType" Parameters="GetParameters()" />
}


@code {
    [Parameter]
    public TViewModel PassiveViewModel { get; set; }
    
    protected override Task<Result<TViewModel, ViewModelFluxError>> GetViewModel()
    {
        return Task.FromResult((Result<TViewModel, ViewModelFluxError>)PassiveViewModel);
    }
}
