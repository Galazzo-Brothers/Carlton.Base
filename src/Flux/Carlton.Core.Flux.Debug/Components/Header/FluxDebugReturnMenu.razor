@using BlazorComponentUtilities
@namespace Carlton.Core.Flux.Debug.Components.Header
@inject NavigationManager NavigationManager

@* Represents a return menu component. *@
<a href="#" class="return-menu" @onclick:preventDefault="true" @onclick="ReturnToApp">
    <i class="@ReturnIconCss"></i>
</a>


@code {
    private string ReturnIconCss
    {
        get => new CssBuilder()
                .AddClass("mdi mdi-24px")
                .AddClass("mdi-open-in-app")
                .Build();
    }

    private void ReturnToApp()
    {
        NavigationManager.NavigateTo($"/");
    }
}

