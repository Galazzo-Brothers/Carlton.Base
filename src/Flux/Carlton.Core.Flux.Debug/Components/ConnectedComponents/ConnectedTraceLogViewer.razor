@namespace Carlton.Core.Components.Flux.Debug.Components
@using Carlton.Core.Flux.Debug.Components.Logging.TraceLogging
@attribute [ObserveStateEvents("LocalStorageCleared")]
@attribute [ObserveStateEvents("SelectedTraceLogMessageChanged")]
@attribute [ObserveStateEvents("TraceLogMessageExpandedChanged")]
@attribute [ObserveStateEvents("TraceLogTablePageChanged")]
@attribute [ObserveStateEvents("TraceLogTableRowsPerPageChanged")]


@inherits BaseConnectedComponent<TraceLogViewerViewModel>


<TraceLogTable TraceLogMessageGroups="@ViewModel.TraceLogMessages.ToList()"
               SelectedTraceLogMessageIndex="@ViewModel.SelectedTraceLogMessageIndex"
               ExpandedRowIndexes="@ViewModel.ExpandedRowIndexes"
               TraceLogTableState="@ViewModel.TraceLogTableState"
               SelectedTraceLogMessageChanged="this.RaiseComponentFluxEvent<TraceLogViewerViewModel, ChangeSelectedTraceLogMessageCommand>"
               TraceLogMessageExapansionChanged="this.RaiseComponentFluxEvent<TraceLogViewerViewModel, ChangeLogMessageExpansionCommand>"
               PageChanged="this.RaiseComponentFluxEvent<TraceLogViewerViewModel, ChangeTraceLogPageCommand>"
               RowsPerPageChanged="this.RaiseComponentFluxEvent<TraceLogViewerViewModel, ChangeTraceLogMessageTableRowsPerPageOptsCommand>" />


