@using Carlton.Core.Flux.Debug.Components.Logging.TraceLogging
@using Carlton.Core.Flux.Debug.Components.Logging.TraceLogging.LogTable
@namespace Carlton.Core.Components.Flux.Debug.Components
@attribute [ObserveStateEvent("LocalStorageCleared")]
@attribute [ObserveStateEvent("SelectedTraceLogMessageChanged")]
@attribute [ObserveStateEvent("TraceLogMessageExpandedChanged")]
@attribute [ObserveStateEvent("TraceLogTablePageChanged")]
@attribute [ObserveStateEvent("TraceLogTableRowsPerPageChanged")]
@inherits BaseConnectedComponent<TraceLogViewerViewModel>

@* Component for displaying a table of trace log messages. *@
<TraceLogTable TraceLogMessageGroups="@ViewModel.TraceLogMessages.ToList()"
               SelectedTraceLogMessageIndex="@ViewModel.SelectedTraceLogMessageIndex"
               ExpandedRowIndexes="@ViewModel.ExpandedRowIndexes"
               TraceLogTableState="@ViewModel.TraceLogTableState"
               OnSelectedTraceLogMessageChanged="this.RaiseComponentFluxEvent<TraceLogViewerViewModel, ChangeSelectedTraceLogMessageCommand>"
               OnTraceLogMessageExpansionChanged="this.RaiseComponentFluxEvent<TraceLogViewerViewModel, ChangeLogMessageExpansionCommand>"
               OnPageChanged="this.RaiseComponentFluxEvent<TraceLogViewerViewModel, ChangeTraceLogPageCommand>"
               OnRowsPerPageChanged="this.RaiseComponentFluxEvent<TraceLogViewerViewModel, ChangeTraceLogMessageTableRowsPerPageOptsCommand>" />


