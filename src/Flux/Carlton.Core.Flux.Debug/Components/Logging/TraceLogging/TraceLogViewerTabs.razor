@using Carlton.Core.Components.Tabs
@using Carlton.Core.Flux.Components
@using Carlton.Core.Flux.Debug.Components.Logging.TraceLogging.ContextDetails
@using Carlton.Core.Flux.Debug.Components.Logging.TraceLogging.RequestObjectDetails
@using Carlton.Core.Flux.Debug.State
@using Carlton.Core.Layouts.DashboardLayouts.TabbedPanelLayout
@namespace Carlton.Core.Flux.Debug.Components.Logging.TraceLogging

@* Represents a layout component with tabs for displaying request context and request object details. *@
<PageTabs ActiveTabIndex="TabIndex"
		  OnTabChange="OnTabChange">
	<TabContent>
		<!-- Request Context Tab -->
		<Tab DisplayText="Request Context" Icon="mdi-information">
			<FluxDebugComponent TViewModel="TraceLogRequestContextDetailsViewModel" />
		</Tab>
		<!-- Request Object Tab -->
		<Tab DisplayText="Request Object" Icon="mdi-file-tree">
			<FluxDebugComponent TViewModel="TraceLogRequestObjectDetailsViewModel" />
		</Tab>
	</TabContent>
</PageTabs>


@code {
	/// <summary>
	/// Gets or sets the tab index.
	/// </summary>
	[Parameter]
	public int TabIndex { get; set; }

	/// <summary>
	/// EventCallback for the selected tab change.
	/// </summary>
	[Parameter]
	public EventCallback<int> OnTabChange { get; set; }
}
