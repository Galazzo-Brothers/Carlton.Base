@using Carlton.Core.Flux.Debug.Components.Logging.EventLogging
@namespace Carlton.Core.Flux.Debug.Components
@attribute [ObserveStateEvent("SelectedLogMessageChanged")]
@attribute [ObserveStateEvent("LogsCleared")]
@attribute [ObserveStateEvent("EventLogLevelFiltersChanged")]
@attribute [ObserveStateEvent("EventLogFilterTextChanged")]
@attribute [ObserveStateEvent("EventLogRowsPerPageChanged")]
@attribute [ObserveStateEvent("EventLogPageChanged")]
@attribute [ObserveStateEvent("EventLogTableOrderingChanged")]
@inherits BaseConnectedComponent<EventLogViewerViewModel>

@* Component for viewing event logs. *@
<EventLogViewer LogMessages="@ViewModel.LogMessages.ToList()" 
                SelectedLogMessageIndex="@ViewModel.SelectedLogMessageIndex"
                EventLogViewerFilterState="@ViewModel.EventLogViewerFilterState"
                EventLogTableState="@ViewModel.EventLogTableState"
                OnLogLevelFiltersChanged="this.RaiseComponentFluxEvent<EventLogViewerViewModel, ChangeEventLogLevelFiltersCommand>"
                OnLogFilterTextChanged="this.RaiseComponentFluxEvent<EventLogViewerViewModel, ChangeEventLogFilterTextCommand>"
                OnLogMessageSelected="this.RaiseComponentFluxEvent<EventLogViewerViewModel, ChangeSelectedLogMessageCommand>"
                OnPageChanged="this.RaiseComponentFluxEvent<EventLogViewerViewModel, ChangeEventLogPageCommand>"
                OnRowsPerPageChanged="this.RaiseComponentFluxEvent<EventLogViewerViewModel, ChangeEventLogMessageTableRowsPerPageOptsCommand>"
                OnItemsOrdered="this.RaiseComponentFluxEvent<EventLogViewerViewModel, ChangeEventLogTableOrderingCommand>" />

