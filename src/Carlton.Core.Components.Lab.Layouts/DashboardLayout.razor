@using Carlton.Core.Layouts.Components
@namespace Carlton.Core.Layouts

<LayoutTemplate IsFixedFooter="true">
    <HeaderContent>
        <Header NavMenuContent="NavContent" PageTitleContent="PageTitleContent" HeaderActionsContent="HeaderActionContent"  />
    </HeaderContent>
    <NavContent>
        <NavTemplate Title="@Title" NavContent="NavContent" />
    </NavContent>
    <Body>
        <BodyContent ShowTabPanel="ShowTabPanel" Body="Body" Tabs="Tabs" />
    </Body>
    <FooterContent>
        <Footer />
    </FooterContent>
</LayoutTemplate>

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public bool ShowTabPanel { get; set; }
    [Parameter]
    public RenderFragment PageTitleContent { get; set; }
    [Parameter]
    public RenderFragment HeaderActionContent { get; set; }
    [Parameter]
    public RenderFragment NavContent { get; set; }
    [Parameter]
    public RenderFragment Body { get; set; }
    [Parameter]
    public RenderFragment Tabs { get; set; }
}



