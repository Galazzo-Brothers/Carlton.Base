@namespace Carlton.Base.Components


<div class="@LogoCss">
    <div class="content">
        <img src="_content/Carlton.Base.Components/images/CarltonLogo.png" />
        <span class="title">@Title</span>
    </div>
</div>



@code {
    [CascadingParameter]
    public LayoutState LayoutState { get; set; }
    [Parameter]
    public string Title { get; set; }
    private string LogoCss 
    {
        get => new CssBuilder("logo")
                .AddClass("collapsed", LayoutState.IsCollapsed)
                .Build();
    }
}
