@namespace Carlton.Core.Components.Library
<div class="slide-tab" style="@SlideTabStyle">
    <button class="slide-button" @onclick="() => IsExpanded = !IsExpanded">@Title</button>
    <div class="slide-container @(IsExpanded ? "expanded" : string.Empty)">
        @Content
    </div>
</div>

@code{
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public RenderFragment Content { get; set; }
    [Parameter]
    public bool IsExpanded { get; set; }
    [Parameter]
    public int PositionBottom { get; set; }

    private string SlideTabStyle
    {
        get => StyleBuilder.Empty()
                .AddStyle("--slide-tab-bottom", $"{PositionBottom}px")
                .Build();

    }
}

