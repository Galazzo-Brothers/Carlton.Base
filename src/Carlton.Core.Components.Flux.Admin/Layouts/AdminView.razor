@namespace Carlton.Core.Components.Flux.Admin
@inject NavigationManager Navigation

@if(IsAdmin)
{
    @AdminContent
}
else
{
    @ApplicationContent
}


@code {

    [Parameter]
    public required RenderFragment AdminContent { get; set; }
    [Parameter]
    public required RenderFragment ApplicationContent { get; set; }

    private bool IsAdmin { get => Navigation.Uri.Contains("/admin"); }
}
