@using Carlton.Core.Utilities.Logging;

<div class="table-row">
    <div class="table-cell"><span class="cell-text">@LogMessage.Timestamp.ToString("MM/dd/yyyy HH:mm:ss.fff")</span></div>
    <div class="table-cell"><span class="cell-text">@LogMessage.Message</span></div>
    <div class="table-cell"><span class="pill @(LogMessage.LogLevel.ToString().ToLower())">@LogMessage.LogLevel</span></div>
    <div class="table-cell"><span class="cell-text">@LogMessage.EventId</span></div>
    <div class="table-cell"><span class="cell-text">@LogMessage.EventName</span></div>
</div>


@code {
    [Parameter]
    public required LogMessage LogMessage { get; set; }
}
