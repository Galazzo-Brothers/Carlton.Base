@namespace Carlton.Base.Components

<DropdownMenu MenuItems="MenuItems">
    <MenuTemplate Context="isActive">
        <i class="hamburger mdi mdi-24px mdi-dots-vertical @(isActive ? "active" : string.Empty)"></i>
        <i class="close mdi mdi-24px mdi-close-circle @(isActive ? "active" : string.Empty)"></i>
    </MenuTemplate>
    <MenuItemTemplate Context="item">
        <DropdownMenuElement MenuItem="item" />
    </MenuItemTemplate>
</DropdownMenu>

@code{
    [Parameter]
    public DropdownMenuItems MenuItems { get; set; } = new DropdownMenuItems(new List<DropdownMenuItem>());
}
