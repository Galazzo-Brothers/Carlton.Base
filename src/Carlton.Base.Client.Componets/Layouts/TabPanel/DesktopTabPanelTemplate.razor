@namespace Carlton.Base.Components

<ResizablePanel>
    <TopContent>
        @MainContent
    </TopContent>
    <BottomContent>
        <DesktopTabBar>
            <ChildContent>
                @Tabs
            </ChildContent>
        </DesktopTabBar>
    </BottomContent>
</ResizablePanel>

@code{
    [Parameter]
    public RenderFragment MainContent { get; set; }
    [Parameter]
    public RenderFragment Tabs { get; set; }
}