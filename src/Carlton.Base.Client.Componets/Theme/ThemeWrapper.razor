@namespace Carlton.Base.Components


<CascadingValue Value="@Theme">
    <CascadingValue TValue="Action<Themes>" Value="@ChangeTheme">
        <div class="theme-wrapper" data-theme="@Theme.ToString().ToLower()">
            @Content
        </div>
    </CascadingValue>
</CascadingValue>


@code {
    [Parameter]
    public RenderFragment Content { get; set; }

    [Parameter]
    public Themes Theme { get; set; }

    private void ChangeTheme(Themes theme)
    {
        Theme = theme;
        StateHasChanged();
    }
}
