@namespace Carlton.Base.Components

<div class="carlton-fab mdi mdi-24px mdi-@(Icon)" style="@CarltonFabStyle" @onclick="OnClickCallback"></div>

@code{
    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public int PositionBottom { get; set; }

    [Parameter]
    public int PositionRight { get; set; }

    [Parameter]
    public EventCallback OnClickCallback { get; set; }

    private string CarltonFabStyle
    {
        get => StyleBuilder.Empty()
                .AddStyle("--carlton-fab-bottom", $"{PositionBottom}%")
                .AddStyle("--carlton-fab-right", $"{PositionRight}%")
                .Build();

    }
}