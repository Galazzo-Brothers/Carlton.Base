@namespace Carlton.Base.Components

<div class="card" data-theme="light">
    <div class="title-content">
        <span class="card-title">@CardTitle</span>
        <span class="status-icon">
            @if (ActionBarContent == null)
            {
                <KebabMenu />
            }
            else
            {
                @ActionBarContent
            }
        </span>
    </div>
    <div class="header-content">
        @HeaderContent
    </div>
    <div class="primary-content">
        @PrimaryCardContent
    </div>
</div>

@code {
    [Parameter]
    public string CardTitle { get; set; }
    [Parameter]
    public RenderFragment ActionBarContent { get; set; }
    [Parameter]
    public RenderFragment HeaderContent { get; set; }
    [Parameter]
    public RenderFragment PrimaryCardContent { get; set; }
}