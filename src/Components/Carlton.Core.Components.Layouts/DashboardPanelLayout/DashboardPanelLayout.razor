@namespace Carlton.Core.Components.Layouts.DashboardPanelLayout
@inherits LayoutComponentBase
@layout LayoutManager


<MediaQueryWrapper>
    <DesktopContent>
        <DashboardPanelDesktopLayout BodyContent="@Body" AppName="@AppName" LogoUrl="@LogoUrl"  IsFullScreen="CascadingState.IsFullScreen" />
    </DesktopContent>
    <MobileContent>
      <DashboardPanelMobileLayout BodyContent="@Body" LogoUrl="@LogoUrl" IsFullScreen="CascadingState.IsFullScreen" />
    </MobileContent>
</MediaQueryWrapper>


@code {
    [CascadingParameter]
    public LayoutManagerCascadingState CascadingState { get; set; }

    public string AppName { get => CascadingState.LayoutSettings.GetValue<string>("AppName"); }

    public string LogoUrl { get => CascadingState.LayoutSettings.GetValue<string>("LogoUrl"); }

    public bool ShowPanel { get => CascadingState.LayoutSettings.GetValue<bool>("ShowPanel"); }

    private string LayoutContainerCss
    {
        get => new CssBuilder("layout-container")
                .AddClass("collapsed", CascadingState.IsFullScreen)
                .Build();
    }

    public static object Nav = new();
    public static object Logo = new();
    public static object HeaderPageTitle = new();
    public static object HeaderActionContent = new();
    public static object Panel = new();
    public static object Footer = new();
}



