@namespace Carlton.Core.Components.Layouts.DashboardLayouts.PanelLayout
@using Carlton.Core.Components.Layouts.Manager
@using Carlton.Core.Components.Layouts.Viewport
@inherits LayoutComponentBase
@layout LayoutManager

@* Represents the panel layout for the dashboard. *@
<MediaQueryWrapper>
    <!-- Desktop Content -->
    <DesktopContent>
        <DashboardPanelDesktopLayout
            BodyContent="@Body" 
            AppName="@AppName" 
            LogoUrl="@LogoUrl"
            IsFullScreen="CascadingState.IsFullScreen" />
    </DesktopContent>

    <!-- Mobile Content -->
    <MobileContent>
      <DashboardPanelMobileLayout
          BodyContent="@Body"
          LogoUrl="@LogoUrl"
          IsFullScreen="CascadingState.IsFullScreen" />
    </MobileContent>
</MediaQueryWrapper>


@code {
    /// <summary>
    /// Cascading parameter for managing layout states.
    /// </summary>
    [CascadingParameter]
    public LayoutManagerCascadingState CascadingState { get; set; }

    /// <summary>
    /// Gets the application name from layout settings.
    /// </summary>
    public string AppName { get => CascadingState.LayoutSettings.GetValue<string>("AppName"); }

    /// <summary>
    /// Gets the URL of the logo from layout settings.
    /// </summary>
    public string LogoUrl { get => CascadingState.LayoutSettings.GetValue<string>("LogoUrl"); }

    /// <summary>
    /// Determines whether to show the panel based on layout settings.
    /// </summary>
    public bool ShowPanel { get => CascadingState.LayoutSettings.GetValue<bool>("ShowPanel"); }


    // Static objects for various content sections
    public static object Nav = new();
    public static object Logo = new();
    public static object HeaderPageTitle = new();
    public static object HeaderActionContent = new();
    public static object Panel = new();
    public static object Footer = new();
}



