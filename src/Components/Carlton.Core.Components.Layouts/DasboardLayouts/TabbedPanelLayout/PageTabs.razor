@using Carlton.Core.Components.Tabs
@namespace Carlton.Core.Components.Layouts.DashboardLayouts.TabbedPanelLayout

<SectionContent SectionId="DashboardTabbedPanelLayout.Tabs">
    <MediaQueryWrapper>
        <DesktopContent>
            <TextTabBar ContentLocation="ContentLocations.Below">
                <ChildContent>
                    @TabContent
                </ChildContent>
            </TextTabBar>
        </DesktopContent>
        <MobileContent>
            <MobileDrawerTabBar>
                <ChildContent>
                    @TabContent
                </ChildContent>
            </MobileDrawerTabBar>
        </MobileContent>
    </MediaQueryWrapper>
</SectionContent>

@code {
    [Parameter]
    public RenderFragment TabContent { get; set; }
}
