@using Carlton.Core.Components.Layouts.DashboardLayouts.PanelLayout
@using Carlton.Core.Components.Layouts.Extensions
@using Carlton.Core.Components.Layouts.FullScreen
@using Carlton.Core.Components.Layouts.Manager
@using Carlton.Core.Components.Layouts.Panel
@using Carlton.Core.Components.Layouts.Viewport
@namespace Carlton.Core.Components.Layouts.DashboardLayouts
@inherits LayoutComponentBase
@inject IFullScreenState FullScreenState

@* Represents the standard dashboard layout. *@
<MediaQueryWrapper>
    <!-- Desktop Content -->
    <DesktopContent>
        <DashboardPanelDesktopLayout BodyContent="@Body"
                                     IsFullScreen="FullScreenState.IsFullScreen"
                                     ShowPanel="false" />
    </DesktopContent>

    <!-- Mobile Content -->
    <MobileContent>
        <DashboardPanelMobileLayout BodyContent="@Body"
                                    IsFullScreen="FullScreenState.IsFullScreen"
                                    ShowPanel="false" />
    </MobileContent>
</MediaQueryWrapper>


@code {
    // Static objects for various content sections
    public static object Nav = new();
    public static object Logo = new();
    public static object HeaderPageTitle = new();
    public static object HeaderActionContent = new();
    public static object Panel = new();
    public static object Footer = new();
}
