@using Carlton.Core.Layouts.Components
@namespace Carlton.Core.Components.Layouts
@inherits LayoutComponentBase
@layout DashboardPanelLayout

<DashboardPanelLayout ShowPanel="ShowPanel"
                      PageTitleContent="PageTitleContent"
                      HeaderActionContent="HeaderActionContent"
                      NavContent="NavContent"
                      Body="Body">
    <PanelContent>
        <SectionOutlet SectionName="tab-content" />
    </PanelContent>
</DashboardPanelLayout>




@code {
    [Parameter]
    public bool ShowPanel { get; set; }
    [Parameter]
    public RenderFragment PageTitleContent { get; set; }
    [Parameter]
    public RenderFragment HeaderActionContent { get; set; }
    [Parameter]
    public RenderFragment NavContent { get; set; }

}



