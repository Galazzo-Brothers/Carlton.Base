@using Carlton.Core.Components.Tabs
@namespace Carlton.Core.Components.Layouts

@if (ShowPanel)
{
    <MediaQueryWrapper>
        <DesktopContent>
            <ResizablePanel>
                <TopContent>
                    @Body
                </TopContent>
                <BottomContent>
                    <TextTabBar ContentLocation="ContentLocations.Below">
                        <ChildContent>
                            @PanelContent
                        </ChildContent>
                    </TextTabBar>
                </BottomContent>
            </ResizablePanel>
        </DesktopContent>
        <MobileContent>
            <div class="mobile-body-content">
                @Body
            </div>
            <div class="mobile-panel-content">
                <MobileDrawerTabBar>
                    <ChildContent>
                        @PanelContent
                    </ChildContent>
                </MobileDrawerTabBar>
            </div>
        </MobileContent>
    </MediaQueryWrapper>
}
else
{
    @Body
}

@code {
    [Parameter]
    public RenderFragment Body { get; set; }
    [Parameter]
    public RenderFragment PanelContent { get; set; }
    [Parameter]
    public bool ShowPanel { get; set; }
}