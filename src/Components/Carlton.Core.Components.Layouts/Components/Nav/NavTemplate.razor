@using Carlton.Core.Components.Layouts.State.FullScreen
@namespace Carlton.Core.Components.Layouts

<Logo Title="@Title" />
@if (!IsFullScreen)
{
    @NavContent
}

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public RenderFragment NavContent { get; set; }
    [Parameter]
    public bool IsFullScreen { get; set; }
}