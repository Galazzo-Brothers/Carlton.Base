@using Carlton.Core.Components.Toasts
@using Carlton.Core.Components.Layouts.State.Toasts
@namespace Carlton.Core.Layouts.Components.Notifications
@inject IToastState ToastState

<div class="notifications" @onclick="@OnClick">
    <i class="mdi mdi-24px mdi-bell-outline"></i>
    <div class="notify">
        <span class="point">@NotificationCount</span>
    </div>
</div>

@code {
    [Parameter]
    public int NotificationCount { get; set; }

    private int index = 0;

    public void OnClick()
    {
        ToastState.RaiseToast(index.ToString(), "Testing 123", ToastTypes.Success);
        index = (index + 1) % 3;
    }
}