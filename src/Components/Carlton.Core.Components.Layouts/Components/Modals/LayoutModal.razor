@using Carlton.Core.Components.Modals
@using Carlton.Core.Components.Layouts.State.Modals
@namespace Carlton.Core.Components.Layouts.Modals

<Modal IsVisible="IsVisible"
       ModalPrompt="@ViewModel.ModalPrompt"
       ModalMessage="@ViewModel.ModalMessage"
       OnClose="@ViewModel.CloseModal"
       OnDismiss="@ViewModel.DismissModal">
    <ModalContent Context="state">
        @switch (ModalTypes)
        {
            case ModalTypes.SingleActionModal:
                <SingleActionModalContent State="state" />
                break;
            case ModalTypes.ConfirmationModal:
                <ConfirmationModalContent State="state" />
                break;
        }
    </ModalContent>
</Modal>

@code {
    [Parameter]
    public bool IsVisible { get; set; }
    [Parameter]
    public ModalTypes ModalTypes { get; set; }
    [Parameter]
    public ModalViewModel ViewModel { get; set; }
}

