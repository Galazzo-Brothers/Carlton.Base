@namespace Carlton.Core.Components.Buttons

@* Represents a clickable action button with text displayed on it. *@
<div @onclick="OnClick" class="action-btn"><span>@Text</span></div>


@code {
    /// <summary>
    /// Gets or sets the text displayed on the button.
    /// </summary>
    [Parameter]
    public string Text { get; set; }
    
    /// <summary>
    /// Event callback invoked when the button is clicked.
    /// </summary>
    [Parameter]
    public EventCallback OnClick { get; set; }
}