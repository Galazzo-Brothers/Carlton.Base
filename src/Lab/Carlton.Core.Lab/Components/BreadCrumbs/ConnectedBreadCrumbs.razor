@using Carlton.Core.Components.Navigation
@namespace Carlton.Core.Lab.Components.BreadCrumbs
@attribute [ObserveStateEvent("MenuItemSelected")]
@inherits BaseConnectedComponent<BreadCrumbsViewModel>

