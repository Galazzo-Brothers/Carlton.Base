@namespace Carlton.Core.Lab.Components
@attribute [ObserveStateEvents("MenuItemSelected")]
@attribute [ObserveStateEvents("ParametersUpdated")]
@inherits BaseConnectedComponent<ComponentViewerViewModel>

<ComponentViewer ComponentType="@ViewModel.ComponentType"
                 ParameterObject="@ViewModel.ComponentParameters.ParameterObj"
                 Act="(name, obj) => base.OnComponentEvent.InvokeAsync(new RecordEventCommand
                                                                        {
                                                                            RecordedEventName = name,
                                                                            EventArgs = obj
                                                                        })" />




