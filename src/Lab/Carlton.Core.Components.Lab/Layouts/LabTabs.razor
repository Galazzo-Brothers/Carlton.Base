@using Carlton.Core.Layouts.Components
@using Carlton.Core.Lab.State
@namespace Carlton.Core.Lab.Layouts

 <Tab DisplayText="Component Events" Icon="mdi-flash">
    <LabFluxComponent TViewModel="EventConsoleViewModel" />
</Tab>
<Tab DisplayText="Component Parameters" Icon="mdi-code-braces">
    <LabFluxComponent TViewModel="ParametersViewerViewModel" />
</Tab>
<Tab DisplayText="Component Source" Icon="mdi-source-branch">
    <JsInteropConnectedWrapper TViewModel="SourceViewerViewModel" 
                               TState="LabState"
                               JsModule="@ModulePath"
                               JsFunction="getSourceViewerViewModel"
                               JsParameters="@(new object[] {".component-viewer"})">
        <SpinnerContent>
            <Spinner />
        </SpinnerContent>
    </JsInteropConnectedWrapper>
</Tab> 

@code{
    private const string ModulePath = "./_content/Carlton.Core.Components.Library/SourceViewer/SourceViewer.razor.js";
}

