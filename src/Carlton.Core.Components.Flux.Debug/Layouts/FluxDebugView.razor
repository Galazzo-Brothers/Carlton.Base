@namespace Carlton.Core.Flux.Debug.Layouts
@inject NavigationManager Navigation

@if(IsDebug)
{
    @DebugContent
}
else
{
    @ApplicationContent
}


@code {
    [Parameter]
    public required RenderFragment DebugContent { get; set; }
    [Parameter]
    public required RenderFragment ApplicationContent { get; set; }

    private bool IsDebug { get => Navigation.Uri.Contains("/debug"); }
}
