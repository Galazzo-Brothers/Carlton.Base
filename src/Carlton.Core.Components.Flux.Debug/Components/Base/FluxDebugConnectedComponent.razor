@using Carlton.Core.Components.Flux.Debug.State;
@namespace Carlton.Core.Components.Flux.Debug
@typeparam TViewModel


<FluxConnectedComponent TViewModel="TViewModel" TState="FluxDebugState">
    <ErrorContent Context="error">
          <ErrorPrompt ErrorHeader="@error.Header" ErrorIconClass="@error.IconClass" ErrorMessage="@error.Message" OnClick="@error.Recover" />
    </ErrorContent>
    <SpinnerContent>
        <Spinner />
    </SpinnerContent>
</FluxConnectedComponent>