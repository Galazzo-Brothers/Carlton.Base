@namespace Carlton.Base.TestBed

<div class="test-results-table">
    <Table Headings="Headings" Items="TestResults" ShowPaginationRow="true" RowsPerPageOpts="RowsPerPageInts">
        <RowTemplate Context="item">
            <TestResultRow Item="item" />
        </RowTemplate>
    </Table>
</div>

@code {
    [Parameter]
    public IEnumerable<TestResult> TestResults { get; set; } = new List<TestResult>();

    private IEnumerable<TableHeadingItem> Headings
    {
        get => new List<TableHeadingItem>
        {
            new TableHeadingItem("Result", "TestResultStatus"),
            new TableHeadingItem("Test Name", "TestName"),
            new TableHeadingItem("Duration", "TestDuration")
        };
    }

    private IEnumerable<int> RowsPerPageInts = new List<int>
    {
        5, 10, 25
    };
}
