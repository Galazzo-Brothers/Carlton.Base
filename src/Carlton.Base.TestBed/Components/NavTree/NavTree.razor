@namespace Carlton.Base.TestBedFramework
@inherits CarltonComponentBase<NavTreeViewModel>


<AccordionSelectGroup
    TItem="string"
    ItemGroups="ViewModel.TreeItems.Select(_ => new AccordionSelectGroupModel<string>(_.DisplayName, 
            _.Children.ToDictionary(__ => __.LeafId, __ => __.DisplayName)))"
    />


