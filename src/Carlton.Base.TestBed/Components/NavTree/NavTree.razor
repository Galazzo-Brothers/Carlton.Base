@namespace Carlton.Base.TestBedFramework
@inherits CarltonComponentBase<NavTreeViewModel>

@using System.Linq;

<AccordionSelectGroup
    TValue="string"
    ItemGroups="ViewModel.TreeItems
                         .ToDictionary(_ => _.DisplayName, _ => 
               _.Children.ToDictionary(__ => __.DisplayName, __ => __.DisplayName))" 
/>


